<div class="col-md-12">
    <h1>Utilisateur</h1>
    <div class="box">
        <div class="box-body">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#Profil" data-toggle="tab" aria-expanded="true">Profil</a></li>
                    <li class=""><a href="#settings" data-toggle="tab" aria-expanded="false">Settings</a></li>
                </ul>
                <div class="tab-content">
                    <div class="box-header with-border">

                    </div><!-- /.box-header -->
                    {{#if profilePic}}
                        <img src="/images/{{profilePic}}" class="img-circle" style="margin-top: 2%; margin-left: 44%; height: 140px" alt="User Image">
                    {{else}}
                        <img src="/images/guest.jpg" class="img-circle" style="margin-top: 2%; margin-left: 44%; height: 140px" alt="User Image">
                    {{/if}}
                    <hr>
                    <div class="tab-pane active" id="Profil">
                        <h3 class="box-title">Informations générales</h3>
                        <div class="box-body">
                            <div>
                                <label class='labelInfo' style="display: inline-flex; margin: 15px;  margin-right: 95px;  font-size: 22px;  margin-left: 25%;">Prenom :</label>
                                <div class='info' id='firstname' style="display: inline-flex; font-size: 18px;"></div>
                            </div>
                            <div>
                                <label class='labelInfo' style="display: inline-flex; margin: 15px;  margin-right: 95px;  font-size: 22px;  margin-left: 25%;">Nom :</label>
                                <div class='info' id='lastname' style="display: inline-flex; font-size: 18px;"></div>
                            </div>
                            <div>
                                <label class='labelInfo' style="display: inline-flex; margin: 15px;  margin-right: 95px;  font-size: 22px;  margin-left: 25%;">Adresse :</label>
                                <div class='info' id='address' style="display: inline-flex; font-size: 18px;"></div>
                            </div>
                            <label class='labelInfo' style="display: inline-flex; margin: 15px;  margin-right: 95px;  font-size: 22px;  margin-left: 25%;">Balance :</label>
                            <div class='info' id='balance' style="display: inline-flex; font-size: 25px; float: right; margin-right: 40%; margin-top: 14px;"></div>
                        </div>
                        <li class="list-group-item togglable">
                            {{#if listOrga}}
                                <b>Organisations</b> <a class="pull-right">{{listOrga.length}} <i class="fa fa-angle-left pull-right dropdownArrow "></i></a>
                            {{else}}
                                <b>Organisations</b> <a class="pull-right">0 <i class="fa fa-angle-left pull-right dropdownArrow "></i></a>
                            {{/if}}
                            <div class="dropdown" hidden>
                                {{#each listOrga}}
                                    <span><a href="/user/{{this}}">{{this}}</a></span>
                                    <hr/>
                                {{/each}}
                            </div>
                        </li>
                        <li class="list-group-item togglable">
                            <div>
                                {{#if listProj}}
                                    <b>Projets</b> <a class="pull-right">{{listProj.length}} <i class="fa fa-angle-left pull-right dropdownArrow "></i></a>
                                {{else}}
                                    <b>Projets</b> <a class="pull-right">0 <i class="fa fa-angle-left pull-right dropdownArrow "></i></a>
                                {{/if}}
                            </div>
                            <div class="dropdown" hidden>
                                {{#each listProj}}
                                    <span><a href="/user/{{this}}">{{this}}</a></span>
                                    <hr/>
                                {{/each}}
                            </div>
                        </li>
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="settings">
                        <div id="accountList">
                            <h2 class="sub-header">Account List</h2>
                            <div class="table-responsive">
                                <table id="accountList" class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Adresse</th>
                                        <th>provenance</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <!--FOR EACH-->
                                    <!--END FOR EACH-->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="settings">
                            <button type="button" id="createNewAccount" class="btn btn-primary" data-toggle="modal" data-target="#modalCreateAccount">Create new account</button>
                            <input type="file" id="keyFileInput" class="btn btn-primary" value="Import existing account">
                            <button type="button" id="importAccount" class="btn btn-primary" onclick="loadKeyFile()">Import key file</button>
                            <button type="button" id="deleteAccount" class="btn btn-danger" onclick="clearAccounts()">
                                <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
                                Delete your accounts
                            </button>
                        </div>
                        <!-- /.tab-pane -->


                        <!--MODAL-->
                        <div id="modalCreateAccount" class="modal fade" role="dialog">
                            <div class="container auth">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="text-center">Create new account</h1>
                                    </div>
                                    <div class="modal-body">
                                        <div id="big-form" class="well auth-box">
                                            <div class="form-group">
                                                <label class=" control-label" for="textinput">Name</label>
                                                <div class="">
                                                    <input id="password" name="password" placeholder="Password" class="form-control input-md" type="password">
                                                </div>
                                            </div>
                                            <input type="submit"  id='submit_form' class='btn btn-info' value="Envoyer !" data-dismiss="modal" " onclick="createBrowserAccount()"/>
                                        </div>
                                        <div class="clearfix"></div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.tab-content -->
        </div>
        <!-- /.nav-tabs-custom -->
    </div>
</div>

<script src="/eth/user.js"></script>
