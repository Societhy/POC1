<div class="col-md-12">
    <h1>Utilisateur</h1>
    <div class="box">
        <div class="box-body">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#Profil" data-toggle="tab" aria-expanded="true">Profil</a></li>
                    <li class=""><a href="#settings" data-toggle="tab" aria-expanded="false">Settings</a></li>
                </ul>
                <div class="tab-content">
                    <div class="box-header with-border">

                    </div><!-- /.box-header -->
                    {{#if profilePic}}
                            <img src="/images/{{profilePic}}" class="img-circle" style="margin-top: 2%; margin-left: 44%; height: 140px" alt="User Image">
                    {{else}}
                            <img src="/images/guest.jpg" class="img-circle" style="margin-top: 2%; margin-left: 44%; height: 140px" alt="User Image">
                    {{/if}}
                    <hr>
                    <div class="tab-pane active" id="Profil">
                        <h3 class="box-title">Informations générales</h3>
                        <div class="box-body">
                            <label class='labelInfo' style="display: inline-flex;margin: 15px;  margin-right: 105px;font-size: 22px; margin-left: 25%;">Nom :</label>
                            <div class='info' id='lastname' style="display: inline-flex; font-size: 25px; float: right; margin-right: 40%; margin-top: 14px;  ">{{lastname}}</div>
                            <div></div>
                            <label class='labelInfo' style="display: inline-flex;margin: 15px;  margin-right: 50px;font-size: 22px; margin-left: 25%;">Prénom :</label>
                            <div class='info' id='firstname' style="display: inline-flex; font-size: 25px;  float: right; margin-right: 40%; margin-top: 14px; ">{{firstname}}</div>
                            <div></div>
                            <label class='labelInfo' style="display: inline-flex; margin: 15px;  margin-right: 75px;  font-size: 22px;  margin-left: 25%;">Email :</label>
                            <div class='info' id='mail' style="display: inline-flex; font-size: 25px; float: right; margin-right: 40%; margin-top: 14px;">{{mail}}</div>
                            <div></div>
                            <label class='labelInfo' style="display: inline-flex; margin: 15px;  margin-right: 95px;  font-size: 22px;  margin-left: 25%;">Adresse :</label>
                            <div class='info' id='addresses' style="display: inline-flex; font-size: 25px; float: right; margin-right: 40%; margin-top: 14px;">{{addresses}}</div>
                            <div></div>
                        </div>

                    </div>
                   <!-- /.tab-pane -->
                    <div class="tab-pane" id="settings">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">My accounts</label>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-2 control-label">Create new account</label>
                            </div>
                            <div class="form-group">
                                <label for="inputExperience" class="col-sm-2 control-label">Import existing account</label>
                            </div>
                            <div class="form-group">
                                <label for="inputSkills" class="col-sm-2 control-label">Delete in-browser accounts (permanent)</label>
                            </div>
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
    </div>

</div>
<script src="/eth/user.js"></script>