<link rel='stylesheet' href='/stylesheets/register.css' />

<div class="container auth">
    <h1 class="text-center">Register</h1>
    <div id="big-form" class="well auth-box">
        <form method="post" action="/register/submit">
            <fieldset>

                <!-- Form Name -->
                <legend>Registering on Societhy</legend>

                <div class="form-group">
                    <label class=" control-label" for="textinput">First Name</label>
                    <div class="">
                        <input id="fname" name="fname" placeholder="First Name" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="form-group">
                    <label class=" control-label" for="textinput">Last Name</label>
                    <div class="">
                        <input id="lname" name="lname" placeholder="Last Name" class="form-control input-md" type="text">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class=" control-label" for="textinput">Username</label>
                    <div class="">
                        <input id="username" name="username" placeholder="Username" class="form-control input-md" type="text">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class=" control-label" for="textinput">e-Mail address</label>
                    <div class="">
                        <input id="mail" name="mail" placeholder="Mail" class="form-control input-md" type="text">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class=" control-label" for="Ethereum address ">ETH Address</label>
                    <div class="">
                        <input id="ethaddr" name="ethaddr" placeholder="ETH Addr" class="form-control input-md" type="text">
                    </div>
                </div>

                <div class="form-group">
                    <label class=" control-label" for="Profile Picture ">Profile picture</label>
                    <div class="">
                        <input id="ppic" name="ppic" type="file" onchange="previewFile()"><br>
                        <img src="" height="200" alt="Image preview...">
                    </div>
                </div>

                <input type="submit"  id='submit_form' value="Send"  />
            </fieldset>
        </form>
    </div>
    <div class="clearfix"></div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/register_client.js"></script>

</div>
